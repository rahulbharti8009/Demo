<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:endColor="@color/white"
                    android:startColor="@color/white"/>
                <corners android:radius="@dimen/switch_radius" />
                <stroke
                    android:width="@dimen/switch_stroke_height"
                    android:color="@android:color/transparent">
                </stroke>
                <size
                    android:width="@dimen/_20sdp"
                    android:height="@dimen/_15sdp"  />

        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/color_switch"
                android:startColor="@color/color_switch"/>
            <corners android:radius="@dimen/switch_radius" />
            <stroke
                android:width="@dimen/switch_stroke_height"
                android:color="@android:color/transparent">
            </stroke>
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_15sdp" />

        </shape>
    </item>


</selector>